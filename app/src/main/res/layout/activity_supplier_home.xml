<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".Supplier_home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:id="@+id/btn_search"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/search_icon"
            app:backgroundTint="@null"
            android:layout_marginTop="10sp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="16dp" />

        <ImageView
            android:id="@+id/img_user"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="230sp"
            android:src="@drawable/user_pic" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">


        <Button
            android:id="@+id/btn_add_deal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add New Deal"
            android:textStyle="bold"
            android:textSize="18sp"
            android:background="#332841"
            android:textColor="#FFFFFF"
            app:backgroundTint="@null"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="16dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zanith roy"
            android:textStyle="bold"
            android:layout_marginStart="120dp"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
             />

    </LinearLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Published Deals"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:padding="10dp"
        android:background="#FFFFFF" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="4dp">

        <!-- Deal 1: Queenstown -->
        <Button
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:text="Queenstown"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            app:backgroundTint="@null"
            android:background="#83736c"
             />

        <TextView
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:text="Total Booking - 1200"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="3dp"
            android:textColor="#000000"
            android:background="#B3E5FC "
             />

        <!-- Deal 2: Rotorua -->
        <Button
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:text="Rotorua"
            android:textSize="25sp"
            android:textColor="#FFFFFF"
            app:backgroundTint="@null"
            android:background="#83736c"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:text="Total Booking - 800"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="3dp"
            android:textColor="#000000"
            android:background="#B3E5FC" />

        <!-- Deal 3: Christchurch -->
        <Button
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:text="Christchurch"
            android:textSize="25sp"
            android:textColor="#FFFFFF"
            app:backgroundTint="@null"
            android:background="#83736c"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:text="Total Booking - 320"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="3dp"
            android:textColor="#000000"
            android:background="#B3E5FC" />

        <!-- Deal 4: Westcoast -->
        <Button
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:text="Westcoast"
            android:textSize="25sp"
            android:textColor="#FFFFFF"
            app:backgroundTint="@null"
            android:background="#83736c"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:text="Total Booking - 506"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="3dp"
            android:textColor="#000000"
            android:background="#B3E5FC" />
    </LinearLayout>

    <!-- Categories Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Categories"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF" />

    <!-- Categories List -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="4dp">

        <!-- Category 1: Destination -->
        <Button
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:text="Destination"
            android:textSize="25sp"
            app:backgroundTint="@null"
            android:textColor="#FFFFFF"
            android:background="#83736c"
            android:layout_marginTop="10dp" />

        <!-- Category 2: Accommodation -->
        <Button
            android:layout_width="250sp"
            android:layout_height="48dp"
            android:text="Accommodation"
            android:textSize="25sp"
            app:backgroundTint="@null"
            android:textColor="#FFFFFF"
            android:background="#83736c"
            android:layout_marginTop="15dp" />

        <!-- Category 3: Activities -->
        <Button
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:text="Activities"
            android:textSize="25sp"
            app:backgroundTint="@null"
            android:textColor="#FFFFFF"
            android:background="#83736c"
            android:layout_marginTop="15dp" />
    </LinearLayout>

</LinearLayout>