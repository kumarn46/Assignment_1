<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B3E5FC"
    android:orientation="vertical"
    tools:context=".Deal_listing">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#5b68a1"
        >

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="45dp"
            android:layout_height="48dp"
            android:background="@drawable/back"
            app:backgroundTint="@null"
            android:contentDescription="Back"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="10dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available Deals"
            android:layout_marginStart="180sp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginTop="10dp" />
    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_back"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#83736c"
                android:padding="20dp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DealName- Queenstown"
                        android:textSize="25sp"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price- 200$"
                        android:textSize="25sp"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Discount- 10%"
                        android:textSize="25sp"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Category- Destination"
                        android:textSize="25sp"
                        android:textColor="@android:color/white" />


                    <Button
                        android:id="@+id/btn_Qdetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Details"
                        android:textSize="20sp"
                        android:background="#35302e"
                        app:backgroundTint="@null"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="15dp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/deal_image_queenstown"
                    android:layout_width="100dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/queenstown"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#c0b4ae"
                android:padding="20dp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DealName- Rotorua"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:textColor="#000000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price- 170$"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:textColor="#000000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Discount- 15%"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:textColor="#000000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Category- Destination"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:textColor="#000000" />


                    <Button
                        android:id="@+id/btn_Rdetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Details"
                        android:textSize="20sp"
                        android:background="#35302e"
                        app:backgroundTint="@null"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="15dp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/deal_image_rotorua"
                    android:layout_width="130dp"
                    android:layout_height="170dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/rotorua"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#83736c"
                android:padding="20dp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DealName- Christchurch"
                        android:textSize="25sp"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price- 190$"
                        android:textSize="25sp"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Discount- 15%"
                        android:textSize="25sp"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Category- Destination"
                        android:textSize="25sp"
                        android:textColor="@android:color/white" />


                    <Button
                        android:id="@+id/btn_Cdetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Details"
                        android:textSize="20sp"
                        android:background="#35302e"
                        app:backgroundTint="@null"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="15dp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/deal_image_christchurch"
                    android:layout_width="100dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/christchurch"
                     />

            </LinearLayout>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#5b68a1"
        android:padding="10dp"
        >
    <ImageButton
        android:id="@+id/btn_home"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="170sp"
        android:background="@drawable/home_icon"
        android:layout_marginBottom="30dp" />

    </LinearLayout>

</LinearLayout>